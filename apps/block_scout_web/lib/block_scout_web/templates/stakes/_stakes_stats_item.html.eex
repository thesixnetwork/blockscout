<div class="stakes-top-stats-item">
  <span class="stakes-top-stats-label">
    <%= @title %>
  </span>
  <span class="stakes-top-stats-value" >
    <span data-selector="<%= if assigns[:name], do: @name %>">
      <%= @value %>
    </span>
    <span class="stakes-top-stats-unit">
      <%= if assigns[:unit], do: @unit %>
    </span>
  </span>
</div>