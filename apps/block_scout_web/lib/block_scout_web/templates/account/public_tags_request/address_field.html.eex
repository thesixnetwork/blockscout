<div class="form-group">
  <%= label @f, :addresses_array, gettext("Address"), class: "control-label", style: "font-size: 14px" %>
  <div>
    <%= array_input @f, :addresses_array, maxlength: 42, size: 70, placeholder: gettext "Smart contract / Address (0x...)" %>
    <%= array_add_button @f, :addresses_array, maxlength: 42, size: 70, placeholder: gettext "Smart contract / Address (0x...)" %>
  </div>
  <%= error_tag @f, :addresses_array, class: "text-danger form-error pt-0" %>
</div>